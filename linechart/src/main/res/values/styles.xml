<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="linechart_LineChartView">
        <item name="linechart_lineColor">@color/linechart_line_color</item>
        <item name="linechart_lineWidth">@dimen/linechart_line_width</item>
        <item name="linechart_cornerRadius">@dimen/linechart_corner_radius</item>

        <item name="linechart_fillType">down</item>
        <item name="linechart_fillColor">@color/linechart_fill_color</item>

        <item name="linechart_gridLineColor">@color/linechart_grid_line_color</item>
        <item name="linechart_gridLineWidth">@dimen/linechart_grid_line_width</item>
        <item name="linechart_gridXDivisions">5</item>
        <item name="linechart_gridYDivisions">5</item>

        <item name="linechart_baseLineColor">@color/linechart_base_line_color</item>
        <item name="linechart_baseLineWidth">@dimen/linechart_base_line_width</item>

        <item name="linechart_zeroLineEnabled">true</item>
        <item name="linechart_zeroLineColor">@color/linechart_zero_line_color</item>
        <item name="linechart_zeroLineWidth">@dimen/linechart_zero_line_width</item>

        <item name="linechart_scrubEnabled">true</item>
        <item name="linechart_scrubLineColor">@color/linechart_scrub_line_color</item>
        <item name="linechart_scrubLineWidth">@dimen/linechart_scrub_line_width</item>

        <item name="linechart_labelMargin">@dimen/linechart_labelMargin</item>
        <item name="linechart_labelTextColor">@color/linechart_label_text_color</item>
        <item name="linechart_labelTextSize">@dimen/linechart_label_text_size</item>
        <item name="linechart_labelBackgroundColor">@color/linechart_labelBackgroundColor</item>
        <item name="linechart_labelBackgroundRadius">@dimen/linechart_labelBackgroundRadius</item>
        <item name="linechart_labelBackgroundPaddingHorizontal">@dimen/linechart_labelBackgroundPaddingHorizontal</item>
        <item name="linechart_labelBackgroundPaddingVertical">@dimen/linechart_labelBackgroundPaddingVertical</item>
    </style>
</resources>
